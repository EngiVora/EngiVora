#################################
# Database Configuration
#################################
MONGODB_URI=mongodb://localhost:27017/originalEngivora
MONGODB_DB=originalEngivora

#################################
# JWT Configuration
#################################
JWT_SECRET=change-me-to-a-strong-secret
# seconds; 7d = 604800
JWT_EXPIRES_IN=604800

#################################
# Application URLs
#################################
# Public app URL (used in emails and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

#################################
# Clerk (if enabled)
#################################
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

#################################
# Email configuration (choose one provider)
#################################
# Option A: Gmail + App Password
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_APP_PASSWORD=

# Option B: Generic SMTP
# EMAIL_SERVICE=smtp
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=

# Option C: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=

# Option D: Mailgun
# EMAIL_SERVICE=mailgun
# MAILGUN_SMTP_LOGIN=
# MAILGUN_SMTP_PASSWORD=

# Optional override for from address
EMAIL_FROM=noreply@engivora.com

#################################
# Node
#################################
NODE_ENV=development

